<style>
    .scrabble-tile {
        height: 90%;
        width: 90%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #deb887; /* Light brown color to mimic wood */
        border-radius: 5px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Subtle shadow for depth */
        border: 1px solid #8b4513; /* Darker brown for the border */
        font-family: 'Times New Roman', Times, serif; /* Classic font style */
        box-sizing: border-box;
    }

    .tile-content {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        background-color: inherit;
        border-radius: inherit;
        box-shadow: inherit;
        border: inherit;
        box-sizing: border-box;
    }

    .tile-letter {
        color: #000; /* Black color for the letter */
        font-size: 2em; /* Larger font size for the letter */
        font-weight: bold;
    }

    .tile-score {
        color: #000; /* Black color for the score */
        font-size: 0.75em; /* Smaller font size for the score */
        position: absolute;
        bottom: 5px;
        right: 5px;
    }
</style>

<MudCard  Class="scrabble-tile">
    <MudCardContent  Class="tile-content">
        <MudText Class="tile-letter">@Letter</MudText>
        <MudText Class="tile-score">@Score</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public char Letter { get; set; }
    [Parameter] public int Score { get; set; }
}
